<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="coverBg" cx="50%" cy="50%" r="80%">
      <stop offset="0%" stopColor="#1e1b4b"/>
      <stop offset="30%" stopColor="#312e81"/>
      <stop offset="70%" stopColor="#1e1b4b"/>
      <stop offset="100%" stopColor="#0f0a1e"/>
    </radialGradient>
    <linearGradient id="titleGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stopColor="#8b5cf6"/>
      <stop offset="30%" stopColor="#3b82f6"/>
      <stop offset="60%" stopColor="#ec4899"/>
      <stop offset="100%" stopColor="#06b6d4"/>
    </linearGradient>
    <filter id="heroGlow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
    <radialGradient id="eyeGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" stopColor="#ffffff" stopOpacity="1"/>
      <stop offset="30%" stopColor="#8b5cf6" stopOpacity="0.8"/>
      <stop offset="100%" stopColor="transparent"/>
    </radialGradient>
  </defs>
  
  <!-- Hero background -->
  <rect width="400" height="300" fill="url(#coverBg)"/>
  
  <!-- Cosmic eye in center -->
  <g filter="url(#heroGlow)">
    <!-- Eye outline -->
    <ellipse cx="200" cy="150" rx="60" ry="30" fill="none" stroke="url(#titleGrad)" strokeWidth="3">
      <animate attributeName="rx" values="55; 65; 55" dur="6s" repeatCount="indefinite"/>
      <animate attributeName="stroke-width" values="2; 4; 2" dur="4s" repeatCount="indefinite"/>
    </ellipse>
    
    <!-- Iris -->
    <circle cx="200" cy="150" r="20" fill="url(#eyeGlow)" opacity="0.8">
      <animate attributeName="r" values="18; 22; 18" dur="3s" repeatCount="indefinite"/>
    </circle>
    
    <!-- Pupil -->
    <circle cx="200" cy="150" r="8" fill="#000000">
      <animate attributeName="r" values="6; 10; 6" dur="2s" repeatCount="indefinite"/>
    </circle>
    
    <!-- Eye reflection -->
    <circle cx="195" cy="145" r="3" fill="white" opacity="0.9">
      <animate attributeName="opacity" values="0.7; 1; 0.7" dur="1.5s" repeatCount="indefinite"/>
    </circle>
  </g>
  
  <!-- Floating VR elements -->
  <g opacity="0.8">
    <!-- VR headset outline -->
    <rect x="80" y="100" width="40" height="20" rx="8" fill="none" stroke="#8b5cf6" strokeWidth="2" opacity="0.6">
      <animate attributeName="opacity" values="0.4; 0.8; 0.4" dur="4s" repeatCount="indefinite"/>
    </rect>
    <circle cx="90" cy="110" r="6" fill="none" stroke="#8b5cf6" strokeWidth="1.5" opacity="0.7"/>
    <circle cx="110" cy="110" r="6" fill="none" stroke="#8b5cf6" strokeWidth="1.5" opacity="0.7"/>
    
    <!-- Digital elements -->
    <polygon points="300,80 320,70 340,80 330,100 310,100" fill="none" stroke="#3b82f6" strokeWidth="2" opacity="0.6">
      <animateTransform attributeName="transform" type="rotate" 
                        values="0 320 85; 360 320 85" dur="12s" repeatCount="indefinite"/>
    </polygon>
    
    <circle cx="80" cy="220" r="8" fill="none" stroke="#ec4899" strokeWidth="2" opacity="0.5">
      <animate attributeName="r" values="6; 12; 6" dur="5s" repeatCount="indefinite"/>
    </circle>
    
    <rect x="310" y="210" width="15" height="15" fill="none" stroke="#06b6d4" strokeWidth="2" opacity="0.6" transform="rotate(45 317.5 217.5)">
      <animateTransform attributeName="transform" type="rotate" 
                        values="45 317.5 217.5; 405 317.5 217.5" dur="8s" repeatCount="indefinite"/>
    </rect>
  </g>
  
  <!-- Particle effects -->
  <g opacity="0.7">
    <circle cx="150" cy="80" r="2" fill="#8b5cf6">
      <animate attributeName="cy" values="80; 60; 80" dur="3s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.4; 1; 0.4" dur="3s" repeatCount="indefinite"/>
    </circle>
    
    <circle cx="280" cy="200" r="1.5" fill="#3b82f6">
      <animate attributeName="cy" values="200; 180; 200" dur="4s" begin="1s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.5; 1; 0.5" dur="4s" begin="1s" repeatCount="indefinite"/>
    </circle>
    
    <circle cx="120" cy="250" r="2.5" fill="#ec4899">
      <animate attributeName="cy" values="250; 230; 250" dur="2.5s" begin="2s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.3; 0.9; 0.3" dur="2.5s" begin="2s" repeatCount="indefinite"/>
    </circle>
    
    <circle cx="320" cy="120" r="1.8" fill="#06b6d4">
      <animate attributeName="cy" values="120; 100; 120" dur="3.5s" begin="0.5s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.6; 1; 0.6" dur="3.5s" begin="0.5s" repeatCount="indefinite"/>
    </circle>
  </g>
  
  <!-- Title text -->
  <g filter="url(#heroGlow)">
    <text x="200" y="50" textAnchor="middle" fill="url(#titleGrad)" fontSize="28" fontWeight="bold" opacity="0.9">
      INSOMNIA
      <animate attributeName="opacity" values="0.7; 1; 0.7" dur="4s" repeatCount="indefinite"/>
    </text>
    
    <text x="200" y="75" textAnchor="middle" fill="white" fontSize="14" opacity="0.8">
      Virtual Reality Experience
    </text>
  </g>
  
  <!-- Bottom energy waves -->
  <g opacity="0.4">
    <path d="M0 250 Q100 230 200 250 T400 240" stroke="url(#titleGrad)" strokeWidth="2" fill="none">
      <animate attributeName="d" 
               values="M0 250 Q100 230 200 250 T400 240;
                       M0 260 Q100 240 200 260 T400 250;
                       M0 250 Q100 230 200 250 T400 240" 
               dur="6s" repeatCount="indefinite"/>
    </path>
    
    <path d="M0 270 Q150 250 300 270 Q350 275 400 270" stroke="url(#titleGrad)" strokeWidth="1.5" fill="none" opacity="0.6">
      <animate attributeName="d" 
               values="M0 270 Q150 250 300 270 Q350 275 400 270;
                       M0 280 Q150 260 300 280 Q350 285 400 280;
                       M0 270 Q150 250 300 270 Q350 275 400 270" 
               dur="8s" begin="1s" repeatCount="indefinite"/>
    </path>
  </g>
  
  <!-- Corner accents -->
  <circle cx="30" cy="30" r="15" fill="none" stroke="#8b5cf6" strokeWidth="2" opacity="0.4">
    <animate attributeName="r" values="12; 18; 12" dur="5s" repeatCount="indefinite"/>
  </circle>
  
  <circle cx="370" cy="30" r="12" fill="none" stroke="#3b82f6" strokeWidth="2" opacity="0.5">
    <animate attributeName="r" values="10; 15; 10" dur="4s" begin="1s" repeatCount="indefinite"/>
  </circle>
  
  <circle cx="30" cy="270" r="10" fill="none" stroke="#ec4899" strokeWidth="2" opacity="0.4">
    <animate attributeName="r" values="8; 13; 8" dur="6s" begin="2s" repeatCount="indefinite"/>
  </circle>
  
  <circle cx="370" cy="270" r="14" fill="none" stroke="#06b6d4" strokeWidth="2" opacity="0.3">
    <animate attributeName="r" values="11; 17; 11" dur="7s" begin="0.5s" repeatCount="indefinite"/>
  </circle>
</svg>